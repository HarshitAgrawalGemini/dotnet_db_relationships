@model List<db_relationship_proj.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h3 class="mb-4">@ViewData["Title"]</h3>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Serial Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @item.Price.ToString("N2")
                        @* <a asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Edit</a> *@
                        <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                    <td>@item.category?.Name</td>
                    <td>@item.SerialNumber?.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
