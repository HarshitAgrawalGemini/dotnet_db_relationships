@model db_relationship_proj.Models.Client
@{
    ViewData["Title"] = "Create Client";
    var items = ViewBag.Items as List<db_relationship_proj.Models.Item>;
}

<h2>Create Client</h2>

<form asp-action="CreateClie" method="post">
    <div class="form-group">
        <label asp-for="Name">Client Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Select Items</label>
        <div class="form-check">
            @foreach (var item in items)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="selectedItemIds" value="@item.Id" />
                    <label class="form-check-label">@item.Name (@item.Price)</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
